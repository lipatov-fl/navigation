<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.navigation.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_mainFragment1"
            app:destination="@id/mainFragment1" />
        <action
            android:id="@+id/action_mainFragment_to_mainFragment2"
            app:destination="@id/mainFragment2" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment1"
        android:name="com.example.navigation.fragments.MainFragment1"
        android:label="fragment_main1"
        tools:layout="@layout/fragment_main1" />
    <fragment
        android:id="@+id/mainFragment2"
        android:name="com.example.navigation.fragments.MainFragment2"
        android:label="fragment_main2"
        tools:layout="@layout/fragment_main2" />
</navigation>